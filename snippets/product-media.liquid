<div id="default-carousel"
  class="relative w-full"
  data-carousel="slide">
  <!-- Carousel wrapper -->
  <div class="relative h-56 overflow-hidden rounded-lg md:h-96 w-64">
    {% for image in product.images %}
      <div class="hidden duration-700 ease-in-out" data-carousel-item>
        <img
          src="{{image | img_url: 'grande'}}"
          class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2"
          alt="...">
      </div>
    {% endfor %}
  </div>
  <!-- Slider indicators -->
  <div class="absolute z-30 flex space-x-3 -translate-x-1/2 bottom-5 left-1/2  w-64">
    {% for image in product.images %}
      <button
        type="button"
        class="w-3 h-3 rounded-full backdrop-brightness-125"
        aria-current="true"
        aria-label="Slide 1"
        data-carousel-slide-to="{{forloop.index0}}"></button>
    {% endfor %}
  </div>

</div>