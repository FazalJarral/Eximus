<div class="featured-collection container mx-auto sm::px-4 flex flex-wrap mt-4  lg:px-8 sm:max-w-7xl">
  {% if section.settings.masonary %}
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">

      {% for product in collection.products %}
        {% render 'card-product-masonary' product: product %}
      {% endfor %}
    </div>
  {% else %}
    {% for product in collection.products %}
      {% render 'card-product' product: product %}
    {% endfor %}
  {% endif %}
</div>


{% schema %}
  {
    "name": "Collection"
  }
{% endschema %}