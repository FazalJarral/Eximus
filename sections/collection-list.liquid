<h2 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white mx-auto sm::px-4 flex flex-wrap justify-between mt-4  lg:px-8 sm:max-w-7xl">Collections</h2>

<div class="container mx-auto sm::px-4 flex flex-wrap justify-between mt-4  lg:px-8 sm:max-w-7xl">

  {% for collection in collections %}
    {% unless collection.handle contains "frontpage" %}

      <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 ">
        <a href="{{collection.url}}">
          <img
            class="rounded-t-lg"
            src="{{collection.featured_image | img_url: 'grande'}}"
            loading="lazy"
            alt="" />
        </a>
        <div class="p-5">
          <a href="#">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ collection.title }}</h5>
          </a>

        </div>
      </div>
    {% endunless %}
  {% endfor %}
</div>


{% schema %}
  {
    "name": "Collection List"
  }
{% endschema %}