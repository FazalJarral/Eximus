<div class="featured-collection container mx-auto sm::px-4 flex flex-wrap justify-center mt-4  lg:px-8 sm:max-w-7xl">

  {% for article in section.settings.blog.articles %}
    {% render 'card-article' article: article %}
  {% endfor %}
</div>


{% schema %}
  {
    "name": "Featured Blog",
    "settings": [
      {
        "type": "blog",
        "id": "blog",
        "label": "Featured Blog"
      }
    ],
    "presets": [
      {
        "name": "Featured Blog"
      }
    ]
  }
{% endschema %}